@using HRMS.Models;
@model UserRegisterViewModel

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card">
                <div class="card-body">

                    <form method="POST">

                        <div class="form-group">

                            <label class="form-label">Adınız</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input type="text" asp-for="Name" class="form-control" />

                        </div>
                        <div class="form-group">

                            <label class="form-label">Soyadınız</label>
                            <span asp-validation-for="Surname" class="text-danger"></span>
                            <input type="text" asp-for="Surname" class="form-control" />

                        </div>

                        <div class="form-group">

                            <label class="form-label">Kullanıcı Adınız</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input type="text" asp-for="UserName" class="form-control" />

                        </div>
                        <div class="mb-3 form-password-toggle">

                            <label class="form-label" for="password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="input-group input-group-merge">
                                <input asp-for="Password" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                            </div>

                        </div>
                        <div class="mb-3 form-password-toggle">

                            <label class="form-label" for="password">Tekrar şifrenizi giriniz...</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                            </div>

                        </div>
                        <div class="form-group">

                            <label class="form-label">Mail</label>
                            <span asp-validation-for="EMail" class="text-danger"></span>
                            <input type="text" asp-for="EMail" class="form-control" />

                        </div>

                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <button class="btn btn-primary d-grid w-100">Kayıt Ol</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>