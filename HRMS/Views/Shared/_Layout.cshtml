<!DOCTYPE html>
<html>
<head>
    <title>HRMS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        /* Tema renkleri */
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #2E5077;
            color: white;
        }

        .card {
            border: none;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #2E5077;
            color: white;
        }

        .card-body {
            background-color: #fff;
            border: 1px solid #ddd;
            border-top: none;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        .carousel-inner img {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">

            <div class="row">
                <div class="col-2">
                    <a class="navbar-brand" asp-controller="Login" asp-action="Index">
                        <img src="~/images/hrms.jpg" width="100%" height="100%" />
                    </a>
                </div>
            </div>
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="col">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="Index">Anasayfa</a>
                            </li>
                        }

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Index">Giriş Yap</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Register" asp-action="Index">Kayıt Ol</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Logout">Çıkış Yap</a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-5 mb-5">
        @RenderBody()
    </div>

    <footer class="footer ">
        <div class="container">
            <span>&copy; HRMS</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#araclarTable').DataTable({
                "columnDefs": [{
                    "targets": 0,
                    "width": "10%"
                }],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("ScriptToPage", required: false);
</body>

</html>